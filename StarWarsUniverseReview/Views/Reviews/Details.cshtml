@model StarWarsUniverseReview.Models.Review

@{
    ViewBag.Title = "Detailed Review";
}
<!--Navigation-->
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <p class="navbar-brand" href="#">Star Wars Universe</p>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Full List", "Index")</li>
                <li>@Html.ActionLink("Add Your Review", "Create")</li> 
                <li><a href="http://starwars.com">StarWars.com</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
</nav>

  <div class="panel panel-default backColor">
    <div class="panel-body">
        <h2 class="chgText">@ViewBag.Title</h2><br />
   </div>
</div>


    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(model => model.Category.Name)</h3>
                    <h4>@Html.DisplayFor(model => model.Title) </h4>
                    <h4>@Html.DisplayFor(model => model.Rating)</h4>
                    <h5>@Html.DisplayFor(model => model.PubDate) </h5>
                    <p>@Html.DisplayFor(model => model.Content)</p>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.RevId }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div>
            </div>
        </div>
</div>
