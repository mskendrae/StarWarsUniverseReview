@model StarWarsUniverseReview.Models.Review

@{
    ViewBag.Title = "Delete";
}
<!--Navigation-->
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <p class="navbar-brand">Star Wars Universe</p>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Full List", "Index")</li>
                <li>@Html.ActionLink("Add Your Review", "Create")</li>
                <li><a href="http://starwars.com">StarWars.com</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
</nav>
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="backColor">
  <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(model => model.Category.Name)</h3>
                    <h4>@Html.DisplayFor(model => model.Title) </h4>
                    <h4>@Html.DisplayFor(model => model.Rating)</h4>
                    <h5>@Html.DisplayFor(model => model.PubDate) </h5>
                    <p>@Html.DisplayFor(model => model.Content)</p>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.RevId }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
